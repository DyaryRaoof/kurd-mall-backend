<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholdr: "Name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholdr: "Email",  class: "form-control"  %>
  </div>

   <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone",placeholdr: "Phone", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, multiple: false, class: "form-control"  %><br>
  </div>

  <div class="field">
    <%= f.label :store_id %><br />
    <%= f.text_field :store_id, autofocus: true, autocomplete: "Store ID",placeholdr: "Store ID", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :city_id %><br />
    <%= f.text_field :city_id, autofocus: true, autocomplete: "City ID",placeholdr: "City ID", class: "form-control" %>
  </div>

   <div class="field  d-fle  align-items-center">
    <%= f.check_box :is_driver %>
    <span class="px-2"><%= f.label :is_driver %></span>
  </div>


   <div class="field d-flex align-items-center">
    <%= f.check_box :is_admin %>
    <span class="px-2"><%= f.label :is_admin %></span>
  </div>


  <div class="fieldx">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",placeholdr: "Password", class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholdr: "Password Confirmation", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary my-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
